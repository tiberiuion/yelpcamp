<% include ../partials/header %>

<div class="container">
<header class="jumbotron">

	<h1>Welcome to YelpCamp!</h1>
	<p>View our hand-picked campgrounds from all over the world</p>
	<p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a></p>

</header>

<div class="row">
	<div class="col-lg-12">
		<h3>Our most popular Campgrounds</h3>
	</div>
</div>

<div class="row">

	<% campgrounds.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6"> 
			<div class="card">
				<img class="card-img-top" src="<%=camp.image %>">
				<div class="card-body"><h4 class="card-title"><%=camp.name %>%></h4></div>
				<a href="/campgrounds/<%=camp._id %>" class="btn btn-primary">More info</a>
			</div> 
		</div>
	<% }) %>
	</div>
</div>
</div>

<% include ../partials/footer %>
