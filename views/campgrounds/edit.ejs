<% include ../partials/header%>
<div class="container">
	<h1 style="text-align:center">Edit <%=campground.name %></h1>
	<div class="row">
		<div class="col-md-4 offset-md-4">
		<form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
			</div>

			<!-- price -->
			<div class="form-group">
				<input class="form-control" type="number" name="campground[price]" value="<%campground.price%>" min="0.01" step="0.01">
			</div>
			<!-- end price -->

			<div class="form-group">
				<input class="form-control" type="tex" name="campground[image]" value="<%=campground.image%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="tex" name="campground[description]" value="<%=campground.description%>">
			</div>
				<button class="btn btn-lg btn-primary btn-block">submit!</button>
			</div>
		</form>
		</div>
		<a href="/campgrounds" class="btn btn-default btn-md">back</a>
	</div>
</div>

<% include ../partials/footer%>
